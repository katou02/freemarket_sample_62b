%header.main_header
  .header
    .header__top
      .header__top__logo
        = link_to root_path do
          = embedded_svg "logo.svg", class: "logo-svg"
      .header__top__form
        %form
          .header__top__form__input
            %input{:name => "keyword", :placeholder => "何をお探しですか？", :type => "search", :value => ""}/
          .header__top__form__btn
            %button
              %i.fas.fa-search
    .header__menu
      %nav.header__menu__left
        %ul.header__menu__left__nav
          %li.header__menu__left__nav__category
            %h2
              = link_to "" do
                %i.fas.fa-list-ul
                %span カテゴリーから探す
            %ul.header__menu__left__nav__category__list.hidden
              %li
                = link_to "カテゴリー１", ""
                %ul
                  %li
                    = link_to "カテゴリー2", ""
                    %ul
                      %li
                      = link_to "カテゴリー3", ""
          %li.header__menu__left__nav__category
            %h2
              = link_to "" do
                %i.fas.fa-tag
                %span ブランドから探す
            %ul.header__menu__left__nav__category__list.hidden
              %li
                = link_to "ブランド１", ""
      %nav.header__menu__right
        %ul.header__menu__right__lists
          - if user_signed_in?
            %li.header__menu__right__lists__list
              = link_to "" do
                %i.far.fa-heart
                %span いいね一覧
            %li.header__menu__right__lists__list
              = link_to "" do
                %i.far.fa-bell
                %span お知らせ
            %li.header__menu__right__lists__list
              = link_to "" do
                %i.fas.fa-check
                %span やることリスト
            %li.header__menu__right__lists__list
              = link_to myPage_users_path do
                = image_tag 'member_photo_noimage_thumb.png'
                %span マイページ
              =link_to "ログアウト", destroy_user_session_path, method: :delete
          - else
            %li.header__menu__right__lists__list.top_sign_btn.sign_up_btn
              = link_to signup_index_path do
                %span 新規会員登録
            %li.header__menu__right__lists__list.top_sign_btn.sign_in_btn
              = link_to new_user_session_path do
                %span ログイン