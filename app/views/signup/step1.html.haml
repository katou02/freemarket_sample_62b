= form_for @user, url: step2_signup_index_path, method: :get, html: {class: 'first-main__box'} do |f|
  = f.text_field :nickname, placeholder: '例) メルカリ太郎'
  = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
  = f.password_field :password, placeholder: '6文字以上'
  = f.text_field :last_name, placeholder: '例) 峻也'
  = f.text_field :first_name, placeholder: '例) 峰松'
  = f.text_field :last_name_kana, placeholder: '例) シュンヤ'
  = f.text_field :first_name_kana, placeholder: '例) ミネマツ'
  = f.number_field :birthday_year, placeholder: '例) 1990年'
  = f.number_field :birthday_month, placeholder: '例) 12月'
  = f.number_field :birthday_day, placeholder: '例) 5日'
  = f.submit 'next'